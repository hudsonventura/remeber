{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "problemMatcher": [], 
      "command": "dotnet build --configuration Debug",
      "options": {
        "cwd": "${workspaceFolder}/src/server"
      },
      "label": "dotnet: build"
    },
    {
      "label": "client: dev",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "VITE v"    // or "ready" depending on framework used
        }
      },
      "options": {
        "cwd": "${workspaceFolder}/src/client"
      },
      "dependsOn": "dotnet: build"
    }
  ]
}

